<%= form_with url: theme_path, method: :patch, html: { data: { controller: "theme" } } do |f| %>

  <%= f.submit "auto", data: { action: "theme#selectTheme:prevent" }%>
  <%= f.submit "light", data: { action: "theme#selectTheme:prevent" } %>
  <%= f.submit "dark", data: { action: "theme#selectTheme:prevent" } %>

<% end %>
